{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/packages/*": ["./src/packages/*"]
    },
    "declaration": true,
    "declarationDir": "./dist/types",
  },
  "include": [
    "./src"
  ]
}