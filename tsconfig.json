{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "noImplicitAny": true,
    "module": "es6",
    "target": "ES5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/packages/*": ["./src/packages/*"],
      "@/utils/*": ["./src/utils/*"],
    },
    "declaration": true,
    "declarationDir": "./dist/types",
    // "emitDeclarationOnly": true,
    // "localPublish": "npm run build && tsc --emitDeclarationOnly && yalc publish"
    // "isolatedModules": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src"
  ],
  "exclude": ["./node_modules"]
}